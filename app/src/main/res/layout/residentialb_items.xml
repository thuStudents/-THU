<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    app:cardBackgroundColor="@color/light_white"
    android:id="@+id/parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/resb_image"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_below="@+id/resb_name"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/resb_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/myfont2bold"
            android:text="Apartment name"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/apartment_contact"
                android:fontFamily="@font/myfont2"
                android:textColor="@color/black"
                android:text="Contacts"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Students"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/myfont2"
                android:textStyle="italic|bold"
                android:textColor="@color/black"
                android:id="@+id/number_of_students"/>
        </LinearLayout>





    </LinearLayout>


</androidx.cardview.widget.CardView>