<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferedCoursesActivity">

    <!--bottom nav bar-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/thu_blue"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_bar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_offeredCourses_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/thuColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="International degree programs"
            android:textSize="25dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

<!--    <ListView-->
<!--        android:id="@+id/offeredCoursesMenu"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_below="@+id/my_offeredCourses_toolbar"/>-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/my_offeredCourses_toolbar"
        android:layout_above="@id/bottom_navigation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/my_offeredCourses_toolbar">

            <androidx.cardview.widget.CardView
                android:id="@+id/computerScienceCard"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <!--      Computer Science    -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/computerScienceImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="content_description_media"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/computer_science_image" />

                    <TextView
                        android:id="@+id/computerScienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/computerScienceImage"
                        android:layout_marginTop="5dp"
                        android:text="COMPUTER SCIENCE"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="20sp" />
                    s

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/computerScienceTitle">

                        <TextView
                            android:id="@+id/computerScienceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:text="@string/computerScienceCardText"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="12sp" />
                    </ScrollView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/energyInformationManagementCard"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/computerScienceCard"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <!--      Computer Science    -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/energyInformationManagementImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="content_description_media"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/energy_information_management" />

                    <TextView
                        android:id="@+id/energyInformationManagementTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/energyInformationManagementImage"
                        android:layout_marginTop="5dp"
                        android:text="ENERGY INFORMATION MANAGEMENT"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/energyInformationManagementText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/energyInformationManagementTitle"
                        android:layout_marginTop="-5dp"
                        android:text="@string/energyInformationManagementCardText"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/intelligentSystemsCard"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/energyInformationManagementCard"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <!--      Computer Science    -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligentSystemsImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="content_description_media"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/intelligent_systems" />

                    <TextView
                        android:id="@+id/intelligentSystemsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligentSystemsImage"
                        android:layout_marginTop="5dp"
                        android:text="INTELLIGENT SYSTEMS"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/intelligentSystemsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligentSystemsTitle"
                        android:layout_marginTop="-5dp"
                        android:text="@string/intelligentSystemsCardText"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/internationalEnergyEconomicsCard"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/intelligentSystemsCard"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <!--      Computer Science    -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/internationalEnergyEconomicsImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="content_description_media"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/international_energy_economics" />

                    <TextView
                        android:id="@+id/internationalEnergyEconomicsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/internationalEnergyEconomicsImage"
                        android:layout_marginTop="5dp"
                        android:text="INTERNATIONAL ENERGY ECONOMICS"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/internationalEnergyEconomicsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/internationalEnergyEconomicsTitle"
                        android:layout_marginTop="-5dp"
                        android:text="@string/internationalEnergyEconomicsCardText"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/internationalEnergyManagementCard"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/internationalEnergyEconomicsCard"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <!--      Computer Science    -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/internationalEnergyManagementImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="content_description_media"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/international_energy_management" />

                    <TextView
                        android:id="@+id/internationalEnergyManagementTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/internationalEnergyManagementImage"
                        android:layout_marginTop="5dp"
                        android:text="INTERNATIONAL ENERGY MANAGEMENT"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/internationalEnergyManagementText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/internationalEnergyManagementTitle"
                        android:layout_marginTop="-5dp"
                        android:text="@string/internationalEnergyManagementCardText"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/systemsEngineeringAndManagementCard"
                android:layout_toRightOf="@id/internationalEnergyManagementCard"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
                <!--      Computer Science    -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/systemsEngineeringAndManagementImage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:contentDescription="content_description_media"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/systems_engineering_management" />

                    <TextView
                        android:id="@+id/systemsEngineeringAndManagementTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/systemsEngineeringAndManagementImage"
                        android:layout_marginTop="5dp"
                        android:text="SYSTEMS ENGINEERING AND MANAGEMENT"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/systemsEngineeringAndManagementText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/systemsEngineeringAndManagementTitle"
                        android:layout_marginTop="-5dp"
                        android:text="@string/systemsEngineeringAndManagementCardText"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>