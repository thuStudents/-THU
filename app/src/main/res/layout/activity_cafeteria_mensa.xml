<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CafeteriaMensaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_cafeteria_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/thuColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafeteria and Mensa"
            android:textSize="25dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/myFirstText"
        android:layout_height="wrap_content"
        android:text="Opening is based on the requirements of the current CoronaVO of the state of Baden-WÃ¼rttemberg "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/my_cafeteria_toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mySecondText"
        android:layout_height="wrap_content"
        android:text="You will need to provide evidence of an up-to-date negative Corona test, or that you have been vaccinated or provide evidence that you have already recovered from coronavirus."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/myFirstText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..................."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mySecondText"/>




</RelativeLayout>