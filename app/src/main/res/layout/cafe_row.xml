<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/off_white"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:id="@+id/linear_layout2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont2"
            android:padding="16dp"
            android:text="Cafe Name"
            android:textColor="@color/off_black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/cafe_image"
            android:src="@drawable/bars"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/expandable_cafe"
            >


            <RatingBar
                android:id="@+id/cafe_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:rating="4" />


            <TextView
                android:id="@+id/cafe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cafe_rating"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/myfont2"
                android:padding="16dp"
                android:text="Cafe Time"
                android:textColor="@color/dark_gray"
                android:textSize="18sp" />

        </RelativeLayout>




    </LinearLayout>





</androidx.cardview.widget.CardView>